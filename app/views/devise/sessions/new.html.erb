<h2 >Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false, controller: "hello" }) do |f| %>
  <div class="form-floating mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control", id:"floatingEmail",  placeholder: "Hole"%>
    <%= f.label :email, for: "floatingEmail" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id:"floatingInput", placeholder: "password" %>
    <%= f.label :password,  for: "floatingInput"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me , class: "form-check-label"%>
    </div>
  <% end %>
  <div class="mb-3">
  <%if flash[:recaptcha_error]%>
     <div class="alert alert-danger"><%= flash[:recaptcha_error] %> </div>
    <%end%>
    <%= recaptcha_tags %>
  </div>
  <div class="actions mb-3">
    <%= f.submit "Log in", id: "login", class:"btn btn-primary" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
