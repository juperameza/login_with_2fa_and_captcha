<div class="container">
  <h2>Edit <%= @user.name %></h2>

  <%= form_for(@user, data: {turbo: false, controller: "edit"}) do |f| %>


    <div class="mb-3">
      <%= f.label :"Correo electrónico", class: "form-label" %><br />
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-floating mb-3">
    <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: "form-control", id:"floatingName", placeholder: "Nombre completo"%>
    <%= f.label :name, for: "floatingName" %>
  </div>

<div class="form-floating mb-3">
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" , class: "form-control", id:"floatingPhone", placeholder: "Numero de telefono"%>
            <%= f.label :phone_number, for: "floatingPhone" %>
          </div>
          <div>
    <%= f.label :birthday, autofocus: true, autocomplete: "birthday" , class: "form-label", id:"date", placeholder: "Nombre completo"%>
    <%= f.date_field :birthday%>
  </div>

    <div class="mb-3">
      <%= f.label :"Contraseña", class: "form-label" %> <i>(Si no deseas cambiarla deja el espacio en blanco)</i><br />
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> caracteres como mínimo</em>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :"Confirmar contraseña", class: "form-label" %><br />
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>

  <%= f.label :current_password,class: "form-label" %>
    <%= f.password_field :current_password,  class: "form-control", id: "client_current_password" %>

    <div class="mb-3">
      <%= f.submit "Update", class: "btn btn-primary", id: "button_client" %>
    </div>
  <% end %>


  <%= link_to "Back", :back %>
</div>

