<div class="container">
  <div class="row mb-3">
    <div class="col-12">
      <h1>Clientes</h1>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-6">
      <%= link_to "Agregar cliente", new_client_path, class: "btn btn-success" %>
    </div>
    <div class="col-6 text-end">
      <input type="text" class="form-control" placeholder="Buscar" id="searchInput">
    </div>
  </div>

      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Edad</th>
            <th>Membresia</th>
            <th>Contacto de emergencia</th>
            <th>Teléfono de emergencia</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td><%= client.name %></td>
              <td><%= client.birthdate %></td>
              <td><%= client.membership %></td>
              <td><%= client.emergency_cname %></td>
              <td><%= client.emergency_cphone %></td>
              <td>
                <%= link_to "Editar", edit_client_path(client), class: "btn btn-secondary" %>
                <%= link_to "Eliminar", client, method: :delete, data: { confirm: "¿Si tilin?" }, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

