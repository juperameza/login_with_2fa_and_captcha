<div class="container">
  <%= form_with(model: client, class: "form") do |form| %>
    <% if client.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>
        <ul>
          <% client.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :Nombre, class: "form-label", style: "display: block" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label "Fecha de nacimiento", class: "form-label", style: "display: block" %>
      <%= form.date_field :birthdate, class: "form-control" %>
    </div>

    <div class="mb-3">
      <div class="form-check">
        <%= form.label "Membresía activa", class: "form-check-label" do %>
          <%= form.check_box :membership, class: "form-check-input" %>
          Activar membresia
        <% end %>
      </div>
    </div>

    <div class="mb-3">
      <%= form.label "Contacto de emergencia", class: "form-label", style: "display: block" %>
      <%= form.text_field :emergency_cname, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :"Número de emergencia", class: "form-label", style: "display: block" %>
      <%= form.text_field :emergency_cphone, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.submit "Guardar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

